@model HomeCreateVM;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <label>Base path:</label>
    <input asp-for="basePath" />
    <select asp-for="SelectedOwner" asp-items="@(new SelectList(Model.ownersList.OrderBy(o=>o.Name),"Name","Name"))"></select> 
    <input type="submit" name="createBtn" value="Create" /> <br />
    <span asp-validation-for="basePath" class="text-danger"></span>
</form>
<form method="get">
    <button type="submit" name="changeBasePathBtn" value="Change Base Path">Change Base Path</button>
</form>
<br>
@foreach(var path in Model.CreatedPaths)
{
    <div>@path</div>
}